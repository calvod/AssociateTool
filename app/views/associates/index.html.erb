<h1>Listing associates</h1>
 
<table>
  <tr>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>
 
  <% @associates.each do |associate| %>
    <tr>
      <td><%= associate.username %></td>
      <td><%= associate.firstname %></td>
      <td><%= associate.lastname %></td>
      <td><%= associate.email %></td>
      <td><%= link_to 'Show', associate_path(associate) %></td>
      <td><%= link_to 'Edit', edit_associate_path(associate) %></td>
      <td><%= link_to 'Destroy', associate_path(associate),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br><br>
<%= link_to 'Add New Associate', new_associate_path %>
